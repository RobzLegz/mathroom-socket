{
    "compilerOptions": {
        "incremental": true,
        "target": "es6",
        "strict": true,
        "esModuleInterop": true,
        "allowJs": true,
        "module": "esnext",
        "noImplicitAny": true,
        "removeComments": true,
    },
    "include": [
        "**/*.ts",
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
}